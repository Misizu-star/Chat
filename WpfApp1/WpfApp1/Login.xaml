<Window x:Class="WpfApp1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login" Height="270" Width="450" FontFamily="Microsoft YaHei UI" FontSize="16" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel  Height="180" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="350">
            <StackPanel Orientation="Horizontal">
                <Label Content=":i d" Padding="10 3" Width="60" Height="30" Background="{x:Null}" FlowDirection="RightToLeft"/>
                <TextBox x:Name="textBox_id" Margin="0 20" Padding="3 5" Width="250" KeyDown="TextBox_id_KeyDown"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content=":密码" Padding="10 3" Width="60" Height="30" Background="{x:Null}" FlowDirection="RightToLeft"/>
                <PasswordBox x:Name="textBox_passwor" Margin="0 20" Padding="3 5" Width="250" KeyDown="TextBox_id_KeyDown" />
            </StackPanel>
            <Button x:Name="btn_login" Content="登录" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
